<div class="card">
    <div class="card-header white">
        <div class="card-title text-muted text-uppercase text-right">
            <div class="card-title-caption">
                <h4><i class="fa fa-user"></i> {{ 'user.show.profile' |trans }}
                </h4>
            </div>
            <div class="card-title-actions">
                <a href="{{ path('fos_user_change_password') }}"
                   class="btn btn-default btn-sm">
                    <i class="fa fa-asterisk"></i> {{ 'user.show.change_password' | trans }}
                </a>

                <a href="{{ path('fos_user_profile_edit') }}"
                   class="btn btn-default btn-sm">
                    <i class="fa fa-edit"></i> {{ 'user.show.edit' | trans }}
                </a>
            </div>
        </div>
    </div>
    <div class="card-block">
        <div class="row">
            <div class="col-3">
                <div class="card">
                    <div class="card-avatar">
                        <img class="rounded-circle img-responsive"
                             src="{{ display_image(user.avatar, {'imagine_filter':'image_thumbnail', 'default': asset('bundles/positibemedia/images/avatar.png')}) }}"
                             alt="{{ user }}">
                    </div>
                    <div class="card-block">
                        <h4 class="card-title">{{ user.getName() }}</h4>
                        <h6 class="card-subtitle mb-2 text-muted">@{{ user.username }}</h6>

                        <a href="mailto:{{ user.email }}" class="card-link">{{ user.email }}</a>

                    </div>
                </div>
            </div>
            <div class="col-9">
                <a href="{{ download_file(app.user.avatar) }}" title="{{ app.user }}" class=""><i class="fa fa-download"></i> Avatar</a>


                <h4>{{ 'user.show.roles' | trans({}, 'messages') }}</h4>

                <p>{{ user.roles | join(', ') }}</p>

                <h4>{{ 'user.show.sign' | trans({}, 'messages') }}</h4>

                <blockquote class="blockquote">
                    {{ user.getSign() | raw }}
                </blockquote>
            </div>

        </div>


    </div>
</div>
