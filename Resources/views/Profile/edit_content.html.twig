{% trans_default_domain 'FOSUserBundle' %}

{#<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit form-horizontal inbox-compose">#}
{{ form_start(form) }}
<div class="card ">
    <div class="card-header white">
        <div class="card-title text-muted text-uppercase text-right">
            <div class="card-title-caption">
                <h4><i class="fa fa-user"></i> Perfil de usuario
                </h4>
            </div>
            <div class="card-title-actions">
                <a href="{{ app.request.server.get('HTTP_REFERER') }}"
                   name="back" class="btn btn-default btn-sm"><i class="fa fa-angle-left"></i> Atras
                </a>
                <a href="{{ app.request.server.get('REQUEST_URI') }}" class="btn btn-default btn-sm "><i
                            class="fa fa-reply"></i> Resetear
                </a>
                <button class="btn btn-primary btn-sm" type="submit"><i class="fa fa-check"></i> Guardar</button>
            </div>
        </div>
    </div>
    <div class="card-block">
        {{ form_row(form.username) }}
        {{ form_row(form.email) }}
        {{ form_row(form.name) }}
        {{ form_row(form.avatar) }}
        {{ form_row(form.sign) }}
        {{ form_row(form.current_password, {'help': 'Por favor introdusca su contrase√±a actual'}) }}
    </div>
    <div class="card-footer card-button text-right">
        <a href="{{ app.request.server.get('HTTP_REFERER') }}" class="btn btn-default">Cancelar</a>
        <button class="btn btn-primary"><i class="fa fa-check"></i> {{ 'profile.edit.submit'|trans }}</button>
    </div>
</div>
{{ form_end(form) }}
{#</form>#}
